/* 引入字体图标 */
@import "./styles/iconfont.wxss";
/* 对所有属性进行设置  小程序中不支持 通配符 '*' */
page,view,text,swiper,swiper-item,image,navigator{
  padding: 0;
  margin: 0;
  box-sizing:border-box;
}

/* 
主题颜色 通过变量来实现
1.less 中存在变量这个知识
2.原生的css和wxss也是支持 变量的
*/
page{
  /* 定义主题颜色 */
  --themeColor:#eb4450;
  /* 
  定义统一的字体大小 假设设计稿大小是 375 px 
  1px=2rpx
  14px=28rpx
  */
  font-size: 28rpx;
}
image {
  width: 100%;
}