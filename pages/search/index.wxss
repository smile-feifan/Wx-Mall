Page {
  background-color: #dedede;
  padding: 20rpx;
}
.search_row {
  height: 70rpx;
  display: flex;
}
.search_row input {
  background-color: #fff;
  flex: 1;
  height: 100%;
  padding-left: 20rpx;
}
.search_row button {
  width: 80rpx;
  height: 100%;
  font-size: 28rpx !important;
  font-weight: 200;
  line-height: 70rpx !important;
  margin-left: 20rpx;
}
.search_content {
  margin-top: 30rpx;
}
.search_content .search_item {
  background-color: #fff;
  font-size: 26rpx;
  padding: 15rpx 10rpx;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
